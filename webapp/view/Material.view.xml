<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:tnt="sap.tnt" xmlns:form="sap.ui.layout.form" xmlns="sap.m"
	xmlns:fb="sap.ui.comp.filterbar" xmlns:t="sap.ui.table" xmlns:l="sap.ui.layout" controllerName="hts.controller.Material"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<l:VerticalLayout width="100%">
		<Label text="FilterBar"/>
		<fb:FilterBar reset="onReset" search="onSearch" showRestoreButton="true" showClearButton="true">
			<fb:filterGroupItems>
				<fb:FilterGroupItem groupName="__$INTERNAL$" name="A" label="Parent" mandatory="false" partOfCurrentVariant="true" visibleInFilterBar="true">
					<fb:control>
						<Input/>
					</fb:control>
				</fb:FilterGroupItem>
				<fb:FilterGroupItem groupName="__$INTERNAL$" name="B" label="Material" labelTooltip="" mandatory="true" partOfCurrentVariant="true"
					visibleInFilterBar="true">
					<fb:control>
						<Input showValueHelp="true" valueHelpRequest="onMaterialHelp"/>
					</fb:control>
				</fb:FilterGroupItem>
				<fb:FilterGroupItem groupName="__$INTERNAL$" name="C" label="Material Name" labelTooltip="" mandatory="false" partOfCurrentVariant="true"
					visibleInFilterBar="true">
					<fb:control>
						<Input/>
					</fb:control>
				</fb:FilterGroupItem>
				<fb:FilterGroupItem groupName="__$INTERNAL$" name="D" label="Project" labelTooltip="" mandatory="false" partOfCurrentVariant="true"
					visibleInFilterBar="true">
					<fb:control>
						<Input/>
					</fb:control>
				</fb:FilterGroupItem>
				<fb:FilterGroupItem groupName="__$INTERNAL$" name="E" label="Global SKU" labelTooltip="" mandatory="false" partOfCurrentVariant="true"
					visibleInFilterBar="true">
					<fb:control>
						<Input/>
					</fb:control>
				</fb:FilterGroupItem>
			</fb:filterGroupItems>
		</fb:FilterBar>
	</l:VerticalLayout>
	<t:Table rows="{/MatCodeSet}" id="productsTable" selectionMode="Single" rowSelectionChange="onProductSelect" alternateRowColors="true">
		<t:extension>
			<OverflowToolbar>
				<Title id="title" text="Material"/>
				<ToolbarSpacer/>
				<SearchField width="45%" class="sapUiSmallMargin"/>
			</OverflowToolbar>
		</t:extension>
		<t:columns>
			<t:Column >
				<Label text="Material Number"/>
				<t:template>
					<Text text="{Matnr}" wrapping="false"/>
				</t:template>
			</t:Column>
			<t:Column >
				<Label text="Market/Country"/>
				<t:template>
					<Link text="{MarketCountry}" press="selectCountry"/>
				</t:template>
			</t:Column>
			<t:Column >
				<Label text="Vendor Name"/>
				<t:template>
					<Text text="{VendorName}" wrapping="false"/>
				</t:template>
			</t:Column>
			<t:Column >
				<Label text="HTS Number"/>
				<t:template>
					<Text text="{HtsNumber}" wrapping="false"/>
				</t:template>
			</t:Column>
			<t:Column >
				<Label text="Value Per Price"/>
				<t:template>
					<Text text="{ValuePerPiece}" wrapping="false"/>
				</t:template>
			</t:Column>
			<!--<t:Column >-->
			<!--	<Label text="Invoice Description"/>-->
			<!--	<t:template>-->
			<!--		<Text text="{local>MARKET_COUNTRY}" wrapping="false"/>-->
			<!--	</t:template>-->
